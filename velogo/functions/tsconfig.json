{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Увімкнення строгих правил типізації
    "outDir": "lib", // Вихідна папка
    "rootDir": "src" // Вихідні файли TypeScript
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib" // Виключення скомпільованих файлів
  ]
}